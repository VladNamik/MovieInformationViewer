<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain"
    tools:context=".components.activities.MainActivity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@id/search_movie_activity_search_layout"
        android:src="@drawable/ic_launcher_movie"
        android:contentDescription="@string/app_image_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_movie_activity_search_layout"
        android:layout_centerInParent="true">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <android.support.v7.widget.SearchView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="2.5"
            android:iconifiedByDefault="true"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/search_movie_activity_search_view"
            android:background="@drawable/main_search_rect"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>